<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.quarkus</groupId>
    <artifactId>quarkus-main-tests</artifactId>
    <version>3.19.3</version>
    <relativePath>../../</relativePath>
  </parent>
  <artifactId>quarkus-integration-test-scala</artifactId>
  <version>3.19.3</version>
  <name>Quarkus - Integration Tests - Scala</name>
  <description>Tests extracted from project Quarkus - Integration Tests - Scala</description>
  <properties>
    <quarkus.native.builder-image.pull>missing</quarkus.native.builder-image.pull>
    <quarkus.build.skip>true</quarkus.build.skip>
    <skipITs>true</skipITs>
    <native.surefire.skip>true</native.surefire.skip>
    <skipTests>true</skipTests>
    <gpg.skip>true</gpg.skip>
    <maven.deploy.skip>true</maven.deploy.skip>
    <scala-maven-plugin.phase>pre-integration-test</scala-maven-plugin.phase>
  </properties>
  <dependencies>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-scala-deployment</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-project-core-extension-codestarts</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-bootstrap-maven-resolver</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-test-maven</artifactId>
      <version>${quarkus.community.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>org.checkerframework</groupId>
          <artifactId>checker-qual</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <testResources>
      <testResource>
        <filtering>true</filtering>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <systemPropertyVariables>
            <quarkus.platform.version>${quarkus.platform.version}</quarkus.platform.version>
          </systemPropertyVariables>
        </configuration>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>${scala-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>ensure-plugin-is-downloaded</id>
            <phase>${scala-maven-plugin.phase}</phase>
            <goals>
              <goal>help</goal>
            </goals>
            <configuration>
              <versionOnly>true</versionOnly>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>basic-test-suite</id>
      <activation>
        <property>
          <name>basicTests</name>
        </property>
      </activation>
      <properties>
        <maven.test.skip>true</maven.test.skip>
        <scala-maven-plugin.phase>none</scala-maven-plugin.phase>
      </properties>
    </profile>
    <profile>
      <id>skip-ITs</id>
      <activation>
        <property>
          <name>skipITs</name>
          <value>true</value>
        </property>
      </activation>
      <properties>
        <scala-maven-plugin.phase>none</scala-maven-plugin.phase>
      </properties>
    </profile>
    <profile>
      <id>java21</id>
      <activation>
        <jdk>[21,)</jdk>
      </activation>
      <properties>
        <os.detected.arch>x86_64</os.detected.arch>
        <os.detected.release.like.debian>true</os.detected.release.like.debian>
        <os.detected.classifier>linux-x86_64</os.detected.classifier>
        <os.detected.release>ubuntu</os.detected.release>
        <os.detected.release.version>24.04</os.detected.release.version>
        <os.detected.bitness>64</os.detected.bitness>
        <os.detected.name>linux</os.detected.name>
        <os.detected.release.like.ubuntu>true</os.detected.release.like.ubuntu>
        <skipITs>true</skipITs>
        <skipTests>true</skipTests>
      </properties>
    </profile>
  </profiles>
</project>
